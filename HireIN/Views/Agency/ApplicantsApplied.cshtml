@model IEnumerable<HireIN.Models.Applicant>

@{
    ViewBag.Title = "ApplicantsApplied";
}

<h2>ApplicantsApplied</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CandidateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacancyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CandidateId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacancyId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Show Candidate Details", "ShowCandidateDetails", new { id=item.CandidateId }) |
            @Html.ActionLink("Accepted", "AcceptedCandidates", new { id=item.ApplicantId }) |
            @Html.ActionLink("Rejected", "RejectedCandidates", new { id=item.ApplicantId })
        </td>
    </tr>
}
    <p>
        @Html.ActionLink("Go to Dashboard" , "dashboard")
    </p>
</table>
