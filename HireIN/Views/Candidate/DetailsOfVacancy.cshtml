@model HireIN.Models.Vacancy

@{
    ViewBag.Title = "DetailsOfVacancy";
}

<div class="container mt-5">
    <h2>Detailed Description of Vacancy</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Html.DisplayFor(model => model.JobTitle)</h4>

            <dl class="row">
                <dt class="col-sm-3">Agency ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AgencyId)</dd>

                <dt class="col-sm-3">Job Description:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobDescription)</dd>

                <dt class="col-sm-3">Job Location:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JobLocation)</dd>

                <dt class="col-sm-3">Salary:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>
            </dl>
        </div>
    </div>

    <p>
        @Html.ActionLink("Back to Dashboard", "Dashboard", null, new { @class = "btn btn-secondary" })
    </p>
</div>

